<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minHeight="240.0" minWidth="520.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="com.example.demo.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" style="-fx-font-weight: 900;" text="Napsauta painiketta." textFill="RED">
      <font>
         <Font size="34.0" />
      </font></Label>
   <Label fx:id="label" />
   <ButtonBar accessibleRole="BUTTON" maxHeight="50.0" maxWidth="350.0" minHeight="50.0" minWidth="100.0" prefHeight="40.0" prefWidth="349.0">
     <buttons>
       <Button fx:id="aamu" mnemonicParsing="false" onAction="#onClickAamu" text="Aamu" />
         <Button fx:id="paiva" mnemonicParsing="false" onAction="#onClickPaiva" text="Päivä" />
         <Button fx:id="ilta" mnemonicParsing="false" onAction="#onClickIlta" text="Ilta" />
         <Button fx:id="yo" mnemonicParsing="false" onAction="#onClickYo" text="Yö" />
     </buttons>
   </ButtonBar>
</VBox>
